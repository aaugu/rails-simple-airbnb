<div class="header">
  <h3>Simple Airbnb</h3>
  <%= link_to "Add Flat", new_flat_path %>
</div>

<div class="container">
  <h1>All our Flats (<%= @flats.size %>)</h1>

  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card">
        <div class="card-image">
          <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1080&q=80" alt="">
        </div>
        <div class="card-header">
          <h3><%= flat.name %></h3>
          <p><%= flat.address %></p>
          <p><i class="fa-solid fa-user-group"></i><%= flat.number_of_guests %><i class="fa-solid fa-euro-sign"><%= flat.price_per_night %></i></p>
        </div>
        <div class="card-footer">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", flat_path(flat) %>
          <%= link_to "Remove", flat_path(flat) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
